generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String    @id @default(cuid())
  createdAt      DateTime  @default(now())
  email          String    @unique
  updatedAt      DateTime? @updatedAt
  name           String
  image          String?
  location       Json?
  description    String?
  phone          String?
  socialNetworks Json? // Github, linkedIn, instagram, facebook
  role           Role?
  Pet            Pet[]
  Session        Session[]

  @@index([name])
}

model Pet {
  id               String    @id @default(cuid())
  name             String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime? @updatedAt
  userId           String
  category         String
  images           String[]
  adopted          Boolean?
  location         Json?
  birthday         DateTime?
  adopterUserEmail String?
  sex              String
  description      String
  User             User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  medicalNote      String?
}

enum Role {
  ADOPTER
  SHELTER
  VET
}
